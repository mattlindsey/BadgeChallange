<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @video.name %>
</p>
<p>
  <button type="button" id="watch" data-user-id=<%= @current_user_id %> data-video-id=<%= @video.id %>>Watch Me!</button>
</p>

<% if current_user %>
  <p>
    <strong>Watched?:</strong>
    <%= current_user.watched? @video %>
  </p>
<% end %>

<%= link_to 'Edit', edit_video_path(@video) %> |
<%= link_to 'Back', videos_path %>

<%= javascript_include_tag :video %>
